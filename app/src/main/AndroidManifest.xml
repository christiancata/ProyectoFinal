<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.geekcorp.proyectofinal" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
        </activity>

        <provider
            android:name=".data.JobsContentProvider"
            android:authorities="org.geekcorp.proyectofinal"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <activity
            android:name=".JobDetailActivity"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".JobPostActivity"
            android:label="@string/job_post_activity"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity android:name=".SplashActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
